// Prisma schema for Polling app

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())  // unique id
  name         String
  email        String   @unique               
  passwordHash String                      
  polls        Poll[]                        // user ke polls
  votes        Vote[]                        // user ke votes
}

model Poll {
  id          String       @id @default(uuid())
  question    String
  isPublished Boolean      @default(false)   // default: poll unpublished
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  creator     User         @relation(fields: [creatorId], references: [id])
  creatorId   String
  options     PollOption[]                       // poll ke options
}

model PollOption {
  id      String   @id @default(uuid())
  text    String
  poll    Poll     @relation(fields: [pollId], references: [id])
  pollId  String
  votes   Vote[]                                    // option ke votes
}

model Vote {
  id       String      @id @default(uuid())
  user     User        @relation(fields: [userId], references: [id])
  userId   String
  option   PollOption  @relation(fields: [optionId], references: [id])
  optionId String

  @@unique([userId, optionId])                      
}
